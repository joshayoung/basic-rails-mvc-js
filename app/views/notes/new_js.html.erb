 <h1>Add Note with JS</h1>

<form novalidate="novalidate" class="simple_form new_note" id="new_note_js" action="/notes" accept-charset="UTF-8" method="post">
  <input name="utf8" type="hidden" value="&#x2713;" />
  <div class="input string required note_subject">
    <label class="string required" for="note_subject"><abbr title="required">*</abbr> Subject</label>
    <input class="string required" type="text" name="note[subject]" id="note_subject" />
  </div>
  <div class="input string required note_body">
    <label class="string required" for="note_body"><abbr title="required">*</abbr> Body</label>
    <input class="string required" type="text" name="note[body]" id="note_body" />
  </div>
  <input type="submit" name="commit" value="Create Note" class="btn" data-disable-with="Create Note" />
</form>
